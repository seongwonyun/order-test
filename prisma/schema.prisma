generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}
        

// 사용자 (바이어)
model User {
  id            String         @id @default(uuid())
  email         String         @unique
  name          String
  phone         String?
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  
  orders        Order[]
  notifications Notification[]
  manager       Manager?       @relation(fields: [managerId], references: [id])
  managerId     String?
  
  @@map("users")
}

// 담당자
model Manager {
  id          String   @id @default(uuid())
  name        String
  phone       String
  email       String?
  department  String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  users       User[]
  notices     Notice[]
  
  @@map("managers")
}

// 카테고리
model Category {
  id          String    @id @default(uuid())
  name        String
  icon        String?
  sortOrder   Int       @default(0)
  createdAt   DateTime  @default(now())
  
  products    Product[]
  
  @@map("categories")
}

// 상품
model Product {
  id            String      @id @default(uuid())
  name          String
  description   String?
  imageUrl      String?
  origin        String      // 원산지
  memo          String?     // 메모
  isActive      Boolean     @default(true)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  category      Category    @relation(fields: [categoryId], references: [id])
  categoryId    String
  
  variants      ProductVariant[]
  orderItems    OrderItem[]
  
  @@map("products")
}

// 상품 옵션 (규격, 포장, 단위)
model ProductVariant {
  id          String     @id @default(uuid())
  size        String     // 규격 (5과~16과)
  packaging   String     // 포장 (팔레트, 박스/망)
  unit        String     // 단위 (P, 박스)
  unitCount   Int        // 기본 수량
  isActive    Boolean    @default(true)
  sortOrder   Int        @default(0)
  createdAt   DateTime   @default(now())
  
  product     Product    @relation(fields: [productId], references: [id])
  productId   String
  
  orderItems  OrderItem[]
  
  @@map("product_variants")
}

// 발주서
model Order {
  id            String      @id @default(uuid())
  orderNumber   String      @unique // 주문번호
  status        OrderStatus @default(DRAFT)
  totalAmount   Int         @default(0)
  memo          String?
  submittedAt   DateTime?
  deadlineDate  DateTime    // 마감일시
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  
  user          User        @relation(fields: [userId], references: [id])
  userId        String
  
  items         OrderItem[]
  
  @@index([userId, status])
  @@index([deadlineDate])
  @@map("orders")
}

enum OrderStatus {
  DRAFT       // 임시저장
  SUBMITTED   // 확정 제출
  CONFIRMED   // 관리자 확인
  CANCELLED   // 취소
}

// 발주 항목
model OrderItem {
  id          String         @id @default(uuid())
  quantity    Int            // 수량
  memo        String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  
  order       Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId     String
  
  product     Product        @relation(fields: [productId], references: [id])
  productId   String
  
  variant     ProductVariant @relation(fields: [variantId], references: [id])
  variantId   String
  
  @@map("order_items")
}

// 알림
model Notification {
  id          String           @id @default(uuid())
  title       String
  message     String
  type        NotificationType
  isRead      Boolean          @default(false)
  link        String?
  createdAt   DateTime         @default(now())
  
  user        User             @relation(fields: [userId], references: [id])
  userId      String
  
  @@index([userId, isRead])
  @@map("notifications")
}

enum NotificationType {
  SYSTEM      // 시스템 알림
  DEADLINE    // 마감 임박
  ORDER       // 주문 관련
  MANAGER     // 담당자 메시지
}

// 공지사항
model Notice {
  id          String   @id @default(uuid())
  title       String
  content     String
  isPinned    Boolean  @default(false)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  manager     Manager? @relation(fields: [managerId], references: [id])
  managerId   String?
  
  @@map("notices")
}